  #os=`pwd|sed -e 's/.*\///' -e 's/[.+-]/_/g'`
  #perl -pi -e s/$inclgrd/${inclgrd}${os}_/; ${f}~

  if test -f $f; then
    if diff ${f} ${f}~ 2>&1 >/dev/null ; then
      echo "no change to ${f}"
      rm -f ${f}~
    else
      echo "replacing old ${f}"
      mv -f ${f}~ ${f}
    fi
  else
    echo "creating new ${f}"
    mv -f ${f}~ ${f}
  fi
done


